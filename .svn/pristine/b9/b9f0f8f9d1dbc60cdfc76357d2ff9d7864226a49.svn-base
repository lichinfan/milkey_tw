<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
  
    <RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_marginTop="15dp"
	    android:layout_marginRight="15dp"
	    android:id="@+id/weatherPanel" >
	<ImageView
        android:id="@+id/weatherBg"
        android:layout_width="300dp"
        android:layout_height="105dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/weather_bg" />
    <!-- Image weather condition -->
    <ImageView
        android:id="@+id/condIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" />
    <!-- weather end -->

<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="135dp"
	    android:layout_marginRight="40dp"
	    android:layout_marginTop="77dp">

    <TextView
        android:id="@+id/skydesc"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="  "
        android:shadowColor="@android:color/black"
        android:shadowRadius="1.0"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textSize="11sp" />

    </LinearLayout>
    
<TextView
        android:id="@+id/unittemp"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="77dp"
        android:text="C"
        android:textSize="11sp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1.0"
        android:shadowDx="1"
        android:shadowDy="1" />

	<TextView
        android:id="@+id/temp"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="28dp"
        android:layout_marginTop="77dp"
        android:text="10"
        android:textSize="11sp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1.0"
        android:shadowDx="1"
        android:shadowDy="1" />
	
	<TextView
        android:id="@+id/temp"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="46dp"
        android:layout_marginTop="77dp"
        android:text="/"
        android:textSize="12sp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1.0"
        android:shadowDx="1"
        android:shadowDy="1" />

    <LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="150dp"
	    android:layout_marginTop="12dp">
    
    <TextView
        android:id="@+id/currentDate"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="2014-01-10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12sp"  />
    
    <com.kentec.milkbox.datetime.DigitalClock
        android:id="@+id/currentTime"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:gravity="center"
        android:text="DigitalClock"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/weekDay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Tuesday"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="12sp" />
    
</LinearLayout>

	</RelativeLayout>	

</RelativeLayout>
